@model ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{ 
    if (Model == null)
    {
        <div>
            <h2>oooops! Ocorreu um erro, mas não arranque os seus cabelos. Nosso time de suporte será notificado e em breve vão corrigir o problema..</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}